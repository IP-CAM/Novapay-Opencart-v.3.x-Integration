{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-pp-express" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <ul class="nav nav-tabs" id="tabs">
          <li class="active"><a href="#tab-account" data-toggle="tab">{{ tab_account }}</a></li>
          <li><a href="#tab-order-status" data-toggle="tab">{{ tab_order_status }}</a></li>
        </ul>
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-novapay" class="form-horizontal">
          <div class="tab-content">
            <div class="tab-pane active" id="tab-account">
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                <div class="col-sm-10">
                  <select name="payment_novapay_status" id="input-status" class="form-control">
                    {% if payment_novapay_status %}
                    <option value="1" selected="selected">{{ text_enabled }}</option>
                    <option value="0">{{ text_disabled }}</option>
                    {% else %}
                    <option value="1">{{ text_enabled }}</option>
                    <option value="0" selected="selected">{{ text_disabled }}</option>
                    {% endif %}
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-status"><span data-toggle="tooltip" title="{{ entry_test_mode_help }}">{{ entry_test_mode }}</span></label>
                <div class="col-sm-10">
                  <select name="payment_novapay_test_mode" id="input-status" class="form-control">
                    {% if payment_novapay_test_mode %}
                    <option value="1" selected="selected">{{ text_enabled }}</option>
                    <option value="0">{{ text_disabled }}</option>
                    {% else %}
                    <option value="1">{{ text_enabled }}</option>
                    <option value="0" selected="selected">{{ text_disabled }}</option>
                    {% endif %}
                  </select>
                </div>
              </div>
              <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-vendor"><span data-toggle="tooltip" title="{{ entry_merchantid_help }}">{{ entry_merchantid }}</span></label>
                <div class="col-sm-10">
                  <input type="text" name="payment_novapay_merchantid" value="{{ payment_novapay_merchantid }}" placeholder="{{ entry_merchantid }}" id="input-vendor" class="form-control" />
                  {% if error_merchantid %}
                  <div class="text-danger">{{ error_merchantid }}</div>
                  {% endif %}
                </div>
              </div>
              <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-vendor">{{ entry_publickey }}</label>
                <div class="col-sm-10">
                  <textarea name="payment_novapay_publickey" placeholder="{{ entry_publickey }}" id="input-vendor" class="form-control">{{ payment_novapay_publickey }}</textarea>
                  {% if error_publickey %}
                  <div class="text-danger">{{ error_publickey }}</div>
                  {% endif %}
                </div>
              </div>
              <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-vendor">{{ entry_privatekey }}</label>
                <div class="col-sm-10">
                  <textarea name="payment_novapay_privatekey" placeholder="{{ entry_privatekey }}" id="input-vendor" class="form-control">{{ payment_novapay_privatekey }}</textarea>
                  {% if error_privatekey %}
                  <div class="text-danger">{{ error_privatekey }}</div>
                  {% endif %}
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-vendor">{{ entry_passprivate }}</label>
                <div class="col-sm-10">
                  <input type="text" name="payment_novapay_passprivate" value="{{ payment_novapay_passprivate }}" placeholder="{{ entry_passprivate }}" id="input-vendor" class="form-control" />
                </div>
              </div>
              <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-vendor"><span data-toggle="tooltip" title="{{ entry_successurl_help }}">{{ entry_successurl }}</span></label>
                <div class="col-sm-10">
                  <input type="text" name="payment_novapay_successurl" value="{{ payment_novapay_successurl }}" placeholder="{{ entry_successurl }}" id="input-vendor" class="form-control" />
                  <span style="display: block; padding: 5px 0">Default url: http://opencart-dev.sprinterra.com/index.php?route=extension/payment/novapay/success</span>
                  {% if error_successurl %}
                  <div class="text-danger">{{ error_successurl }}</div>
                  {% endif %}
                </div>
              </div>
              <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-vendor"><span data-toggle="tooltip" title="{{ entry_failurl_help }}">{{ entry_failurl }}</span></label>
                <div class="col-sm-10">
                  <input type="text" name="payment_novapay_failurl" value="{{ payment_novapay_failurl }}" placeholder="{{ entry_failurl }}" id="input-vendor" class="form-control" />
                  <span style="display: block; padding: 5px 0">Default url: http://opencart-dev.sprinterra.com/index.php?route=extension/payment/novapay/failed</span>
                  {% if error_failurl %}
                  <div class="text-danger">{{ error_failurl }}</div>
                  {% endif %}
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="novapay_payment_type">{{ entry_payment_type }}</label>
                <div class="col-sm-10">
                  <div class="row">
                    <label>
                      <input type='radio' name='payment_novapay_payment_type_value' id="novapay_payment_type" value='1' {{ payment_novapay_payment_type_value is defined and payment_novapay_payment_type_value == 1 ? 'checked="checked"' : '' }} /> {{ entry_payment_type_direct }}
                    </label>
                  </div>
                  <div class="row">
                    <label>
                      <input type='radio' name='payment_novapay_payment_type_value' id="novapay_payment_type" value='2' {{ payment_novapay_payment_type_value is defined and payment_novapay_payment_type_value == 2 ? 'checked="checked"' : '' }} /> {{ entry_payment_type_hold }}
                    </label>
                  </div>
                      {% if error_payment_type %}
                      <div class="text-danger">{{ error_payment_type }}</div>
                      {% endif %}
                </div>
              </div>
            </div>
            <div class="tab-pane" id="tab-order-status">
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-order-status">{{ entry_order_status_created }}</label>
                <div class="col-sm-10">
                  <select name="payment_novapay_created_status_id" id="input-order-status" class="form-control">
                    <option disabled value="">{{ entry_select_status }}</option>
                    {% for order_status in order_statuses %}
                      {% if order_status.order_status_id == payment_novapay_created_status_id %}
                        <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                      {% else %}
                        <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                      {% endif %}
                    {% endfor %}
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-order-status">{{ entry_order_status_expired }}</label>
                <div class="col-sm-10">
                  <select name="payment_novapay_expired_status_id" id="input-order-status" class="form-control">
                    <option disabled value="">{{ entry_select_status }}</option>
                    {% for order_status in order_statuses %}
                      {% if order_status.order_status_id == payment_novapay_expired_status_id %}
                        <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                      {% else %}
                        <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                      {% endif %}
                    {% endfor %}
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-order-status">{{ entry_order_status_processing }}</label>
                <div class="col-sm-10">
                  <select name="payment_novapay_processing_status_id" id="input-order-status" class="form-control">
                    <option disabled value="">{{ entry_select_status }}</option>
                    {% for order_status in order_statuses %}
                      {% if order_status.order_status_id == payment_novapay_processing_status_id %}
                        <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                      {% else %}
                        <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                      {% endif %}
                    {% endfor %}
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-order-status">{{ entry_order_status_holded }}</label>
                <div class="col-sm-10">
                  <select name="payment_novapay_holded_status_id" id="input-order-status" class="form-control">
                    <option disabled value="">{{ entry_select_status }}</option>
                    {% for order_status in order_statuses %}
                      {% if order_status.order_status_id == payment_novapay_holded_status_id %}
                        <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                      {% else %}
                        <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                      {% endif %}
                    {% endfor %}
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-order-status">{{ entry_order_status_hold_confirmed }}</label>
                <div class="col-sm-10">
                  <select name="payment_novapay_hold_confirmed_status_id" id="input-order-status" class="form-control">
                    <option disabled value="">{{ entry_select_status }}</option>
                    {% for order_status in order_statuses %}
                      {% if order_status.order_status_id == payment_novapay_hold_confirmed_status_id %}
                        <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                      {% else %}
                        <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                      {% endif %}
                    {% endfor %}
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-order-status">{{ entry_order_status_processing_hold_completion }}</label>
                <div class="col-sm-10">
                  <select name="payment_novapay_processing_hold_completion_status_id" id="input-order-status" class="form-control">
                    <option disabled value="">{{ entry_select_status }}</option>
                    {% for order_status in order_statuses %}
                      {% if order_status.order_status_id == payment_novapay_processing_hold_completion_status_id %}
                        <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                      {% else %}
                        <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                      {% endif %}
                    {% endfor %}
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-order-status">{{ entry_order_status_paid }}</label>
                <div class="col-sm-10">
                  <select name="payment_novapay_paid_status_id" id="input-order-status" class="form-control">
                    <option disabled value="">{{ entry_select_status }}</option>
                    {% for order_status in order_statuses %}
                      {% if order_status.order_status_id == payment_novapay_paid_status_id %}
                        <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                      {% else %}
                        <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                      {% endif %}
                    {% endfor %}
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-order-status">{{ entry_order_status_failed }}</label>
                <div class="col-sm-10">
                  <select name="payment_novapay_failed_status_id" id="input-order-status" class="form-control">
                    <option disabled value="">{{ entry_select_status }}</option>
                    {% for order_status in order_statuses %}
                      {% if order_status.order_status_id == payment_novapay_failed_status_id %}
                        <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                      {% else %}
                        <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                      {% endif %}
                    {% endfor %}
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-order-status">{{ entry_order_status }}</label>
                <div class="col-sm-10">
                  <select name="payment_novapay_processing_void_status_id" id="input-order-status" class="form-control">
                    <option disabled value="">{{ entry_select_status }}</option>
                    {% for order_status in order_statuses %}
                    {% if order_status.order_status_id == payment_novapay_processing_void_status_id %}
                    <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                    {% else %}
                    <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                    {% endif %}
                    {% endfor %}
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-order-failed-status">{{ entry_order_status_voided_text }}</label>
                <div class="col-sm-10">
                  <select name="payment_novapay_voided_status_id" id="input-order-failed-status" class="form-control">
                    <option disabled value="">{{ entry_select_status }}</option>
                    {% for order_status in order_statuses %}
                    {% if order_status.order_status_id == payment_novapay_voided_status_id %}
                    <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                    {% else %}
                    <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                    {% endif %}
                    {% endfor %}
                  </select>
                </div>
              </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}
