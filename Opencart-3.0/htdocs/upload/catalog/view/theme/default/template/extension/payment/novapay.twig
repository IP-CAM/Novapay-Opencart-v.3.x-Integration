    if(!$('#collapse-payment-method').hasClass('fixed')) {
        jQuery('[href="#collapse-payment-method"]').click();
        setTimeout(function() {
            jQuery('#button-payment-method').click();
        }, 1000);
        $('#collapse-payment-method').addClass('fixed');
    }
//--></script>
